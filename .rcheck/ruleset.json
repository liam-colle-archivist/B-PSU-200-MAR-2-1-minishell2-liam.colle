{
  "config": {
    "extended_regex": true,
    "executables": [
      "mysh"
    ]
  },
  "rules": [
    {
      "library": "GLIBC.*",
      "ban": [
        "(?!__).*"
      ],
      "allow": [
        "malloc",
        "free",
        "exit",
        "opendir",
        "readdir",
        "closedir",
        "getcwd",
        "chdir",
        "fork",
        "stat",
        "lstat",
        "fstat",
        "open",
        "close",
        "getline",
        "strtok",
        "strtok_r",
        "read",
        "write",
        "execve",
        "access",
        "isatty",
        "wait",
        "wait-pid",
        "wait3",
        "wait4",
        "signal",
        "kill",
        "getpid",
        "strerror",
        "perror",
        "strsignal",
        "pipe",
        "dup",
        "dup2",
        "stdin",
        "stdout",
        "stderr"
      ]
    }
  ]
}
